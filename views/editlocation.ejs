<%- include ('templates/header'); -%>

    <main>
        <center>
            <hr>
            <h2>Edit Location</h2>
            
            <form action="/admin/<%=location.id%>/updatelocation?_method=PUT" method='POST' class="border">
                <div class="imgcontainer">
                    <img src="/img/img_avatar.png" alt="Avatar" class="avatar"style="width:200px;height:200px;">
                </div>
                
                <div class="container">
                    <label for="name"><b>Location Name</b></label>
                    <input type="text" placeholder="Enter Location Name" id="name" name="name" value='<%=location.name%>' required>
                    
                    <label for="scooters"><b>Number of Scooters</b></label>
                    <input type="number" min="0" placeholder="Enter Number of Scooters" name="scooters" value='<%=location.numOfDevices%>' required>
                    
                    <label for="zip"><b>Zip Code</b></label>
                    <input type="text" placeholder="Enter Zip Code" id="zip" name="zip" value='<%=location.api%>' required>
                    
                    <button type="submit" class="btn btn-success">Save Changes</button>
                </div>
                
                <div class="container" style="background-color:#f1f1f1">
                    <a href="/admin" class="btn btn-danger">Cancel</a>
                </div>
            </form>
        </center>
    </main>
    <br/>

<%- include ('templates/footer'); -%>